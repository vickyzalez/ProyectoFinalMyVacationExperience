<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.5"
    >
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/homeapp"
        android:adjustViewBounds="true"
        />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#FFFFFF"
        android:text="@string/txtHome"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        >


    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:width="150dp"
        android:height="150dp"
        android:background="@drawable/background_homebutton"
        android:drawableTint="@color/VickyCelesteOscuroBoton"
        android:drawableTop="@android:drawable/ic_dialog_map"
        android:text="@string/btnTxtGoogle"
        android:textColor="@color/VickyCelesteOscuroBoton"
        android:textSize="16dp"
        android:textStyle="normal"
        android:typeface="monospace" />

        <Button
            android:id="@+id/btnWikitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btnGoogle"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="20dp"
            android:width="150dp"
            android:height="150dp"
            android:background="@drawable/background_homebutton"
            android:drawableTint="@color/VickyCelesteOscuroBoton"
            android:drawableTop="@drawable/ic_explore_white"
            android:text="@string/btnTxtWikitude"
            android:textColor="@color/VickyCelesteOscuroBoton"
            android:textSize="16dp"
            android:textStyle="normal"
            android:typeface="monospace" />
    </RelativeLayout>
</LinearLayout>