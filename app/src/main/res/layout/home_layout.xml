<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/homenewapp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:typeface="serif"
            android:fontFamily="sans-serif"
            android:textColor="#EEFFFFFF"
            android:background="@android:color/transparent"
            android:text="@string/txtHome"/>



            <Button
                android:id="@+id/btnGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/btnWikitude"
                android:layout_marginBottom="60dp"
                android:width="165dp"
                android:height="165dp"
                android:background="#CCFFFFFF"
                android:drawableTint="@color/VickyCelesteOscuroBoton"
                android:drawableTop="@android:drawable/ic_dialog_map"
                android:padding="30dp"
                android:text="@string/btnTxtGoogle"
                android:textColor="@color/VickyCelesteOscuroBoton"
                android:textSize="18sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:typeface="monospace" />

        <Button
                android:id="@+id/btnWikitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/btnGoogle"
                android:layout_marginEnd="12dp"
                android:width="165dp"
                android:height="165dp"
                android:background="#CCFFFFFF"
                android:drawableTint="@color/VickyCelesteOscuroBoton"
                android:drawableTop="@drawable/ic_explore_white"
                android:padding="30dp"
                android:text="@string/btnTxtWikitude"
                android:textColor="@color/VickyCelesteOscuroBoton"
                android:textSize="18sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:typeface="monospace" />

    </RelativeLayout>
</LinearLayout>